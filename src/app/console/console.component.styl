@require "../../stylesheets/variables"
    
.console-outer
    min-height: "calc(100% - %s)" % ($footer-bar-height + $navigation-bar-height)
    .console-inner
        height: 100%
        padding: 20px 0
        p.title
            text-align: center;
        .location
            display flex
            width: 100%
            padding-top: 20px
            flex-direction: row
            align-items: flex-start
            justify-content: center
            flex-flow: wrap
            .destination-selector
                width: 25%
                max-width: 300px
                padding: 10px
                box-sizing border-box
            +onTablet()
                flex-direction: row
                .destination-selector
                    width 50%
                    max-width 50%
            +onMobile()
                flex-direction: column
                .destination-selector
                    width 100%
                    max-width 100%
        .results-outer
            width: 100%;
            height: 100%;
            padding: 10px;
            box-sizing: border-box
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 10px
            flex-direction: column;